# Environment Configuration Template for Backend

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/khabarlagbe
# For MongoDB: mongodb://localhost:27017/khabarlagbe

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-minimum-32-characters
REFRESH_TOKEN_EXPIRES_IN=7d

# Mapbox Configuration
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token_here

# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Payment Gateway - bKash (Bangladesh)
BKASH_BASE_URL=https://checkout.sandbox.bkash.com/v1.2.0-beta
BKASH_APP_KEY=your_bkash_app_key
BKASH_APP_SECRET=your_bkash_app_secret
BKASH_USERNAME=your_bkash_username
BKASH_PASSWORD=your_bkash_password

# Payment Gateway - Nagad (Bangladesh)
NAGAD_BASE_URL=http://sandbox.mynagad.com:10080/remote-payment-gateway-1.0/api/dfs
NAGAD_MERCHANT_ID=your_nagad_merchant_id
NAGAD_MERCHANT_NUMBER=your_nagad_merchant_number
NAGAD_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYour public key\n-----END PUBLIC KEY-----\n"
NAGAD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key\n-----END PRIVATE KEY-----\n"
NAGAD_CALLBACK_URL=http://localhost:3000/api/v1/payment/nagad/callback

# Payment Gateway - SSL Commerz (Bangladesh - Cards)
SSLCOMMERZ_STORE_ID=your_store_id
SSLCOMMERZ_STORE_PASSWORD=your_store_password
SSLCOMMERZ_IS_LIVE=false

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_BUCKET_NAME=khabarlagbe-uploads
AWS_REGION=us-east-1

# Alternative: Firebase Storage
# FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@khabarlagbe.com
FROM_NAME=KhabarLagbe

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Social Auth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Application Settings
MAX_UPLOAD_SIZE=10485760
# 10MB in bytes
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=900000
# 15 minutes in ms
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
# options: error, warn, info, debug

# Monitoring (Optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Feature Flags
ENABLE_SMS_VERIFICATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SURGE_PRICING=false
MAINTENANCE_MODE=false

# Business Rules
MIN_ORDER_AMOUNT=50
MAX_DELIVERY_DISTANCE=20
# in km
BASE_DELIVERY_FEE=20
PER_KM_DELIVERY_FEE=5
DEFAULT_COMMISSION_RATE=15
# percentage
DEFAULT_TAX_RATE=5
# percentage

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
MAX_OTP_ATTEMPTS=3

# Session Configuration
SESSION_SECRET=your-session-secret-minimum-32-characters-long
SESSION_TIMEOUT=86400000
# 24 hours in ms
